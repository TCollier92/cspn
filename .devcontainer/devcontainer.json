{
    "name": "Dev Environment",
    "dockerFile": "../Dockerfile",
    "customizations": {
        "vscode": {
            "settings":{
                "vscode-node.autoStartDebugger": true 
            },
            "extensions": [
            "dbaeumer.vscode-eslint",
            "esbenp.prettier-vscode",
            "Google.geminicodeassist"
            ]
        }
    },
    "build":{
        "args": {
            "SKIP_NPM_INSTALL": "true",
            "INSTALL_BASH":"true",
            "INSTALL_GIT":"true",
            "KEEP_CERTS":"true"
        }
    },
    "forwardPorts": [
        3000
    ],
    "onCreateCommand": "/bin/bash .devcontainer/create.sh",
    "postCreateCommand": "/bin/bash .devcontainer/post-create.sh"
}